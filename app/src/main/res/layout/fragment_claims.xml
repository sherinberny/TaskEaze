<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/claimFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.ClaimsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1497dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                android:inputType="date"
                android:textSize="20sp" />

            <!-- Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount"
                android:inputType="numberDecimal"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Distance"
                android:inputType="numberDecimal"
                android:textSize="20sp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Description"
                android:inputType="textMultiLine"
                android:lines="3" />


            <!-- Attachments -->


            <!-- Submit Buttons -->
            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_blue"
                android:text="Submit Claim"
                android:textColor="@color/light_pink" />

            <Button
                android:id="@+id/buttonReimburse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reimburse Claim"
                android:textColor="@color/light_pink" />
        </LinearLayout>
    </ScrollView>

    <!-- Submitted Claims RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewClaims"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollView"
        android:padding="40dp"
        android:visibility="gone" />
</FrameLayout>


