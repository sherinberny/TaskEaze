<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backgroundStyle">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="comm_dialog" parent="@android:style/Theme.Dialog">

        <item name="android:background">@color/white</item>
        <item name="android:windowMinWidthMajor">96%</item>
        <item name="android:windowMinWidthMinor">96%</item>
    </style>

    <style name="CardStyle" parent="CardView">

        <item name="cardCornerRadius">2dp</item>
        <item name="contentPadding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>